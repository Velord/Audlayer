<?xml version="1.0" encoding="utf-8"?>
<com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/star_sky_night">

    <FrameLayout
        android:id="@+id/menu_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menuFragmentBackgroundDarkestOpacity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/menu" />
    </FrameLayout>

    <com.jem.liquidswipe.layout.LiquidSwipeFrameLayout
        android:id="@+id/mini_player_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/menu_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <velord.university.ui.util.viewPager.LiquidSwipeDynamicHeightViewPager
            android:id="@+id/mini_player_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.jem.liquidswipe.layout.LiquidSwipeFrameLayout>

    <FrameLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/fragmentBackgroundDarkerOpacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <com.jem.liquidswipe.LiquidSwipeViewPager
        android:id="@+id/menu_member_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mini_player_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_panel" />

</com.jem.liquidswipe.layout.LiquidSwipeConstraintLayout>