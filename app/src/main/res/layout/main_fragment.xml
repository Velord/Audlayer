<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/soon_feature_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"

        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"

        android:shadowColor="@color/soonFeatureShadow"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="8.0"

        android:text="@string/soon_feature"
        android:textAlignment="center"

        android:textColor="@color/soonFeature"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/work_in_progress_imageView"
        android:layout_width="170dp"
        android:layout_height="200dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="24dp"
        android:contentDescription="@string/soon_feature"
        android:src="@drawable/repair_tools"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soon_feature_textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/now_playing_ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_border_shadows"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work_in_progress_imageView"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/now_playing_ImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/now_playing_song_image"
            android:src="@drawable/repair_tools"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/now_playing_song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/now_playing_song_name"
            app:layout_constraintStart_toEndOf="@+id/now_playing_ImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/now_playing_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/now_playing_song_artist"
            android:textColor="@color/now_playing_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/now_playing_song_liked"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/now_playing_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_song_name" />

        <TextView
            android:id="@+id/now_playing_song_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/now_playing_song_high_quality"
            android:textSize="8sp"

            app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/now_playing_song_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/now_playing_song_shuffle"
            style="@style/MowPlayingShuffleRepeatLikedImageButtons"
            android:contentDescription="@string/now_playing_song_shuffle"
            android:src="@drawable/shuffle_gray"

            app:layout_constraintBottom_toBottomOf="@+id/now_playing_ImageView"
            app:layout_constraintStart_toEndOf="@+id/now_playing_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_song_artist" />

        <ImageButton
            android:id="@+id/now_playing_song_repeat"
            style="@style/MowPlayingShuffleRepeatLikedImageButtons"
            android:contentDescription="@string/now_playing_song_repeat"
            android:src="@drawable/repeat_gray"

            app:layout_constraintBottom_toBottomOf="@+id/now_playing_ImageView"
            app:layout_constraintStart_toEndOf="@+id/now_playing_song_shuffle"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_song_artist" />

        <ImageButton
            android:id="@+id/now_playing_song_liked"
            style="@style/MowPlayingShuffleRepeatLikedImageButtons"
            android:contentDescription="@string/now_playing_song_liked"
            android:src="@drawable/heart_gray"

            app:layout_constraintBottom_toBottomOf="@+id/now_playing_ImageView"
            app:layout_constraintStart_toEndOf="@+id/now_playing_song_repeat"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_song_artist" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/now_playing_ImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/now_playing_song_liked">

            <ImageButton
                android:id="@+id/now_playing_song_skip_prev"
                style="@style/NowPlayingTrackNextImageButtons"
                android:contentDescription="@string/now_playing_song_skip_prev"
                android:src="@drawable/skip_prev_gray" />

            <ImageButton
                android:id="@+id/now_playing_song_play_or_pause"
                style="@style/NowPlayingTrackNextImageButtons"
                android:contentDescription="@string/now_playing_song_play_or_pause"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/now_playing_song_skip_next"
                style="@style/NowPlayingTrackNextImageButtons"
                android:contentDescription="@string/now_playing_song_skip_next"
                android:src="@drawable/skip_next_gray" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_ImageView">

            <TextView
                android:id="@+id/textView5"
                style="@style/NowPlayingStartEndTrack"
                android:text="@string/now_playing_song_start_song"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428" />

            <TextView
                android:id="@+id/textView6"
                style="@style/NowPlayingStartEndTrack"
                android:text="@string/now_playing_song_end_song"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428"
                tools:text="04: 10" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:progressTint="@color/soonFeature"
                android:progressBackgroundTint="@color/now_playing_gray"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_border_shadows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout style="@style/MenuButtonsLayout">

                <ImageButton
                    android:id="@+id/folder"
                    style="@style/MenuButtons"
                    android:contentDescription="@string/open_folder"
                    android:src="@drawable/folder" />

                <TextView
                    android:id="@+id/folders_textView"
                    style="@style/MenuArticle"
                    android:text="@string/folder" />
            </LinearLayout>

            <LinearLayout style="@style/MenuButtonsLayout">

                <ImageButton
                    android:id="@+id/album"
                    style="@style/MenuButtons"
                    android:contentDescription="@string/open_album"
                    android:src="@drawable/album" />

                <TextView
                    android:id="@+id/albums_textView"
                    style="@style/MenuArticle"
                    android:text="@string/albums" />
            </LinearLayout>

            <LinearLayout style="@style/MenuButtonsLayout">

                <ImageButton
                    android:id="@+id/songs"
                    style="@style/MenuButtons"
                    android:contentDescription="@string/open_songs"
                    android:src="@drawable/songs" />

                <TextView
                    android:id="@+id/songs_textView"
                    style="@style/MenuArticle"
                    android:text="@string/songs" />
            </LinearLayout>

            <LinearLayout style="@style/MenuButtonsLayout">

                <ImageButton
                    android:id="@+id/radio"
                    style="@style/MenuButtons"
                    android:contentDescription="@string/open_radio"
                    android:src="@drawable/radio" />

                <TextView
                    android:id="@+id/radio_textView"
                    style="@style/MenuArticle"
                    android:text="@string/radio" />
            </LinearLayout>

            <LinearLayout style="@style/MenuButtonsLayout">

                <ImageButton
                    android:id="@+id/vk"
                    style="@style/MenuButtons"
                    android:contentDescription="@string/open_vk"
                    android:src="@drawable/vk" />

                <TextView
                    android:id="@+id/vk_textView"
                    style="@style/MenuArticle"
                    android:text="@string/vk" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
