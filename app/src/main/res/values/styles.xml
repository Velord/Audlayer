<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fragmentBackground</item>
        <item name="colorPrimaryDark">@color/fragmentBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MenuButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuArticle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MiniPlayerTrackNextImageButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MiniPlayerShuffleRepeatLikedImageButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TopMenuImageButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuButtonsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MiniPlayerStartEndTrack" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/menuArticle</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StopCloseMiniPlayerText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/mini_player_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PopupMenuOverlapAnchor" parent="Widget.AppCompat.PopupMenu">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="PopupMenuOverlapAnchorFolder" parent="PopupMenuOverlapAnchor">
        <item name="android:itemBackground">@color/popUpMenuActionBarFolder</item>
    </style>

</resources>
