<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fragmentBackground</item>
        <item name="colorPrimaryDark">@color/fragmentBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuArticle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/now_playing_gray</item>
    </style>

    <style name="NowPlayingTrackNextImageButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MowPlayingShuffleRepeatLikedImageButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuButtonsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NowPlayingStartEndTrack" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/now_playing_gray</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
